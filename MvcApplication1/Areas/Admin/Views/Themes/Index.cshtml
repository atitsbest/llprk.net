@model Llprk.Application.DTOs.Requests.ThemesRequest
@{
    ViewBag.Title = "Themes";
}

<div class="row">
    <div class="col-xs-3">
        <h3>Available Themes</h3>
        <p class="text muted">
            Edit a theme, activate or duplicate it.
            Hint: Click the theme name to edit it.
            <br />
            <br />
            To upload a theme, yout need a zip-file containing the theme.
        </p>
        <a href="" class="btn btn-success">Upload Theme...</a>
    </div>  
        <div class="col-xs-9">
    @foreach (var theme in Model.Themes)
    {
        <div class="col-xs-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4><a href="@Url.Action(MVC.Admin.Themes.Edit(theme.Name))">
                        @theme.Name
                        <small><i class="glyphicon glyphicon-pencil"></i></small>
                        </a></h4>
                    <hr />
                    @if (theme.IsActive)
                    {
                        <strong>Active</strong>
                    }
                    else
                    {
                        <a href="#" class="btn btn-sm btn-primary">Activate...</a>
                    }
                    <a href="#" class="btn btn-sm btn-default pull-right">Duplicate</a>
                </div>
            </div>
        </div>
    }
            </div>
</div>
