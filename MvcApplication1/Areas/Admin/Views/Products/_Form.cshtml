@model Llprk.Web.UI.Areas.Admin.Models.ProductEdit

<div class="col-xs-3">
    <h3>Product details</h3>
    <p class="text-muted">
        Write an name and a description.
    </p>
</div>
<div class="col-xs-9">
    <textbox params="label:'Name',value:model.name"></textbox>
    <textbox params="label:'Description',value:model.description,rows:10"></textbox>
</div>
<hr />
<div class="col-md-3">
    <h3>Pictures</h3>
    <p class="text-muted">
        Upload and order images.
        First image will be the featured image.
    </p>
</div>
<div class="col-md-9">

    <div class="form-group">
        <label class="control-label">Pictures</label>
        <div class="controls">
            <ul class="thumbnails" data-bind="foreach: model.pictures">
                <li class="span1">
                    <div>
                        <img data-bind="attr: { src: url }" alt="" class="img-polaroid">
                    </div>
                </li>
            </ul>
            <span class="help-block muted">Drag images to change their position.</span>
        </div>
    </div>
</div>

<hr />
<div class="col-md-3">
    <h3>Price & Inventory</h3>
    <p class="text-muted">
    </p>
</div>
<div class="col-md-9">

    <div class="row">
        <div class="col-xs-6">
            <textbox params="label:'Price',value:model.price"></textbox>
        </div>
        <div class="col-xs-6">
            <textbox params="label:'Available',value:model.available"></textbox>
        </div>
    </div>


    <formgroup params="vale:model">
        <label class="control-label">
            <input type="checkbox" data-bind="checked:value.isPublished" />
            Published?
        </label>
    </formgroup>
</div>
<hr />
<div class="col-md-3">
    <h3>Search Engines</h3>
    <p class="text-muted">
        Enter page titles, meta description, url
    </p>
</div>
<div class="col-md-9">
    <textbox params="label:'Page title',value:model.pageTitle"></textbox>
    <textbox params="label:'Meta description',value:model.metaDescription"></textbox>
    <textbox params="label:'Url handle',value:model.urlHandle"></textbox>
</div>

<hr />  
<div class="col-md-9 col-md-offset-3 form-actions">
    <input type="submit" value="Save" class="btn btn-small btn-success" />
    <small class="muted">or</small>
    @Html.ActionLink("Back to products", "Index")
</div>
