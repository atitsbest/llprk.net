@model Llprk.Web.UI.Models.Product

@{
    ViewBag.Title = "Delete";
}

<div class="span12">

    @using (Html.BeginForm()) {
        <fieldset>
            <legend>Are you sure you want to delete <span style="color: red;">"@Html.DisplayFor(m => m.Name)"</span>?</legend>
            <p class="muted">
                @Html.DisplayFor(model => model.Description)
            </p>
        </fieldset>
        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-small btn-danger" />
            <small class="muted">or</small>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
