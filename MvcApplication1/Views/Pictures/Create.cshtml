@model Llprk.Web.UI.Models.Picture

@{
    ViewBag.Title = "Create";
}

<div class="span12">
    @using (Html.BeginForm("Create", "Pictures", FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Add Picture</legend>

            <div class="controls">
                <input type="file" name="files" multiple />
            </div>

            <div class="form-actions">
                <input type="submit" value="Create" class="btn btn-small btn-success" />
                <small class="muted">or</small>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </fieldset>
    }

    <div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
