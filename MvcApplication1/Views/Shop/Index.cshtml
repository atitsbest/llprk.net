@model MvcApplication1.ViewModels.ShopIndex
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" ng-app> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8" ng-app> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9" ng-app> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" ng-app>
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>lillypark [PROTOTYP]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <meta name="description" content="lillypark,Tasche,Taschen,Bag,Sak Saum">

    @Styles.Render("~/Content/css/shop")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!--[if lt IE 8]>
        <p class="chromeframe alert alert-error">
            Hopla. Du verwendest einen alten Browser. 
            <a href="http://browsehappy.com/">Bring Deinen Browser heute auf den neuesten Stand</a> oder 
            <a href="http://www.google.com/chromeframe/?redirect=true">installiere Google Chrome Frame</a> um dieses Seite richtig anzuzeigen.
        </p>
    <![endif]-->
    <header>
        <div class="container-fluid">
            <div class="row-fluid">
                <h1 id="logo">lillypark</h1>
                <nav class="pull-right">
                    <a href="#" class="active">taschen</a>
                    <a href="#">klimbim</a>
                    <a href="#">über uns</a>
                    <a href="#" style="font-style: italic;" onclick="scrollToTop();$('#basket').slideToggle();$(this).toggleClass('active');return false;">Warenkorb</a>
                </nav>
            </div>
        </div>
    </header>

    <section id="basket" ng-ctrl="CartCtrl">
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Cost</th>
                                <th style="text-align: right;">Qantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in items">
                                <td>{{item.product.name}}</td>
                                <td>{{item.product.price | currency}}</td>
                                <td style="text-align: right;">{{item.qty}}</td>
                            </tr>
                        </tbody>
                    </table>

                    <form action="">
                        <p>Wo wohnst Du?</p>
                        <select name="" id="">
                            <option value="DE">Deutschland (+ €5 Versand)</option>
                            <option value="AT">Österreich (+ €7 Versand)</option>
                        </select>

                        <p>
                            <h4 style="display: inline-block;">Dein Gesamtpreis ist&nbsp;<h2 style="display: inline-block;">€54,98</h2>
                            </h4>
                        </p>
                        <button type="submit" class="btn btn-warning">Zur Kasse...</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <section id="main">
        <div class="container-fluid">
            @foreach(var category in Model.Categories.Keys) {
                <div class="row-fluid align-center">
                    <div class="span12">
                        <h2 class="categoryName">@category</h2>
                    </div>
                </div>

                <div class="row-fluid align-center">
                    <div class="span12 products">
                        @foreach(var product in Model.Categories[category]) {
                            <div class="span3">
                                <a href="#" onclick="$('#basket').slideUp('fast');$('.detail').slideToggle(function() { $('html, body').animate({ scrollTop: $('.detail').offset().top-170 }, 200); }); $('.products img').css('opacity', .3); return false;">
                                    @if(@product.Pictures.Any()) {
                                        <img src="@product.Pictures.First().PictureUrl" alt="@product.Name" />
                                    }
                                    <p><span>@product.Name @product.Pice.ToString("c")</span></p>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="container-fluid detail"
            style="display: none;"
            onclick="$('.detail').slideUp();$('.products img').css('opacity', 1);">
            <div class="row-fluid align-center" style="position: relative;">
                <div class="span6 align-center">
                    <img src="pictures/gelb-01a.png" alt="Socheata">
                </div>
                <div class="span5">
                    <h2>socheata</h2>
                    <p class="align-left">
                        A trendy bag featuring two external pleats with a large bow accent. Has a zipper closure with two interior cell phone pockets and 1 interior zippered pocket. Comes with an adjustable strap.
               
                    </p>
                    <table class="table table-condensed">
                        <tr>
                            <th>Materialien</th>
                            <td>Denim</td>
                        </tr>
                        <tr>
                            <th>Größe</th>
                            <td>12 in. high x 13 in. wide</td>
                        </tr>
                        <tr>
                            <th>Gurt</th>
                            <td>60 in. (adjustable)</td>
                        </tr>
                    </table>

                    <h3 style="font-family: 'Source Sans Pro',Arial,sans-serif;">€34,99</h3>

                    <a href="#"
                        class="btn btn-inverse"
                        onclick="$('.detail').slideUp('fast', function() { $('.products img').css('opacity', 1); $('html, body').animate({ scrollTop: 0 }, 200); $('#basket').slideDown('fast'); });">In den Warenkorb</a>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row-fluid align-center explanation">
                <div class="span12">
                    <p>
                        Jede Tasche ist einzigartig.<br />
                        Darum gibt es sie auch nur genau ein mal.
                   
                        <br />
                        Schnapp dir deine tasche!
               
                    </p>
                </div>
            </div>
        </div>

    </section>

    <footer>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12 pull-right">
                    <nav>
                        <a href="#">events</a>
                        <a href="#">impressum</a>
                        <a href="http://www.facebook.com/taschenlilly" target="_blank">facebook</a>
                        <a href="#">twitter</a>
                    </nav>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12 pull-right">
                    <p class="copyright">&copy; 2012 lillypark</p>
                </div>
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/shop")

    @*@RenderSection("scripts", required: false)*@
    
    <script type="text/javascript">
        function scrollToTop() { $('html, body').animate({ scrollTop: 0 }, 200); }
        function scrollTo(e) { $('html, body').animate({ scrollTop: $(e).offset().top }, 200); }
    </script>

</body>
</html>
