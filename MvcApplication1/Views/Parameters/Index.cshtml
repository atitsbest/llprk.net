@model Llprk.Web.UI.ViewModels.ParameterIndex

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="span12">
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Mail messages</legend>

            <div class="control-group">
                @Html.LabelFor(model => model.MailMessageOrdered, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextAreaFor(model => model.MailMessageOrdered, new { @class = "input-xxlarge", rows = 10 })
		    <p>
			@Html.ValidationMessageFor(model => model.MailMessageOrdered)
		    </p>
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.MailMessagePaid, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextAreaFor(model => model.MailMessagePaid, new { @class = "input-xxlarge", rows = 10 })
		    <p>
			@Html.ValidationMessageFor(model => model.MailMessagePaid)
		    </p>
                </div>
            </div>

            <div class="control-group">
                @Html.LabelFor(model => model.MailMessageShipped, new { @class = "control-label" })
                <div class="controls">
                    @Html.TextAreaFor(model => model.MailMessageShipped, new { @class="input-xxlarge", rows=15})
		    <p>
			@Html.ValidationMessageFor(model => model.MailMessageShipped)
		    </p>
                </div>
            </div>

            <div class="form-actions">
                <input type="submit" value="Save" class="btn btn-small btn-success" />
            </div>
        </fieldset>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('form').addClass('form-horizontal');
    </script>
}

